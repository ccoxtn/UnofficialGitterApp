<?xml version="1.0" encoding="utf-8" ?>
<ContentView
        xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Gitter.Views.MessageView">
  <StackLayout Orientation="Horizontal" Padding="5" Spacing="10">
    <Image x:Name="Avatar" WidthRequest="35" HeightRequest="35" />
    <StackLayout Orientation="Vertical"
                 Spacing="5">
      <Label Text="{Binding Sender}" Font="Small" />
      <Label Text="{Binding Text}" Font="Medium" />
    </StackLayout>
  </StackLayout>
</ContentView>